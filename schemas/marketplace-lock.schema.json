{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentika.com/schemas/marketplace-lock.schema.json",
  "title": "Marketplace Lock",
  "description": "Lockfile schema for tracking approved skills with SHA pinning",
  "type": "object",
  "required": ["version", "generated", "skills"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Lockfile format version"
    },
    "generated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last generation"
    },
    "skills": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "const": "internal",
            "description": "Internal marketplace skill"
          },
          {
            "type": "object",
            "required": ["origin", "sha"],
            "properties": {
              "origin": {
                "type": "string",
                "format": "uri",
                "description": "Source repository URL"
              },
              "sha": {
                "type": "string",
                "pattern": "^[a-f0-9]{7,40}$",
                "description": "Git commit SHA (short or full)"
              }
            },
            "additionalProperties": false,
            "description": "External vendored skill"
          }
        ]
      },
      "description": "Map of skill paths to their source info"
    }
  },
  "additionalProperties": false
}
